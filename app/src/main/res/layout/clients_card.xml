<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:cardElevation="6dp"
    app:cardCornerRadius="12dp"
    android:layout_margin="12dp"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#faffffff"
        >
        <ImageView
            android:src="@mipmap/macd"
            android:id="@+id/client_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:layout_marginLeft="20dp">

           <TextView
               android:id="@+id/clinet_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Macdownalds"
               android:textSize="22sp"
               android:textColor="#000"
               android:textStyle="bold"/>

           <TextView
               android:id="@+id/totalprice"
               android:layout_below="@id/clinet_name"
               android:layout_marginTop="30dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#000"
               android:textSize="14sp"
               android:text="Total: 400"/>

           <TextView
               android:id="@+id/bill_date"
               android:layout_below="@id/clinet_name"
               android:layout_marginTop="30dp"
               android:textColor="#000"
               android:layout_alignParentRight="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="14sp"
               android:text="11/12"/>

       </RelativeLayout>
    </LinearLayout>





</android.support.v7.widget.CardView>